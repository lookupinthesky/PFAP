<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_item_top"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="16dp"
            android:scaleType="center"
            android:src="@mipmap/icon_prisoner"
            />

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prisonerId"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="11/ABCED/456"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"

                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_done_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="5"
                    android:text="COMPLETED"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/time_stamp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="25 Jun 2019"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:drawablePadding="16dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                app:drawableTopCompat="@drawable/ic_timer_black_24dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/list_item_bottom"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/action"
            android:gravity="center"
            android:text="Resume"
            android:layout_height="40dp"
            android:drawableTop="@drawable/ic_play_arrow_black_24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/volunteer_id"
            android:gravity = "center"
            android:text="VOLUNTEERID"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:drawableTopCompat="@drawable/ic_volunteer"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/details"
            android:gravity = "center"
            android:text= "Details"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:drawableTopCompat="@drawable/ic_info_outline_black_24dp"/>


    </LinearLayout>


</LinearLayout>