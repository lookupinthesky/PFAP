<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <TextView

        android:drawable = "@drawable/ic_timer_black_24dp"
        android:gravity="center"
        android:id="@+id/time_stamp_header"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1" />


    <TextView
        android:drawable = "@drawable/ic_person_black_24dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:id="@+id/prisonerId_header"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1.5" />

    <TextView
        android:drawable = "@drawable/ic_group_black_24dp"
        android:gravity="center"
        android:id="@+id/volunteer_id"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1.5" />

    <TextView
        android:layout_margin="4dp"
        android:gravity="center"
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1.2" />

    <TextView
        android:gravity="center"
        android:id="@+id/action"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1" />




</LinearLayout>